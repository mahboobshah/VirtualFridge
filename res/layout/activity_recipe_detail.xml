<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecipeActivity" >

    <EditText
        android:id="@+id/edName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edName"
        android:layout_toLeftOf="@+id/edName"
        android:text="Name" />

    <EditText
        android:id="@+id/edRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edName"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edRating"
        android:layout_alignBottom="@+id/edRating"
        android:layout_toLeftOf="@+id/edRating"
        android:text="Rating" />

    <EditText
        android:id="@+id/edIngr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edRating"
        android:layout_below="@+id/edRating"
        android:layout_marginTop="45dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edIngr"
        android:layout_alignBottom="@+id/edIngr"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/edIngr"
        android:text="Ingredients" />

    <EditText
        android:id="@+id/edYield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edIngr"
        android:layout_below="@+id/edIngr"
        android:layout_marginTop="57dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edYield"
        android:layout_alignBottom="@+id/edYield"
        android:layout_alignLeft="@+id/textView3"
        android:text="Yield" />

    <EditText
        android:id="@+id/edTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edYield"
        android:layout_below="@+id/edYield"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edTime"
        android:layout_alignBottom="@+id/edTime"
        android:layout_alignLeft="@+id/textView4"
        android:text="Time" />

</RelativeLayout>
